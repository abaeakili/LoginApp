<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.abaeakili.arrowmessenger">


    <application android:allowBackup="true"
        android:label="Arrow Messenger"
        android:icon="@drawable/app_icon"
        android:theme="@style/AppTheme">

			<activity
				android:name=".MainActivity"
				android:configChanges="orientation|screenSize"
				android:screenOrientation="portrait" 
				>
				<intent-filter>
					<action android:name="android.intent.action.MAIN"/>
					<category android:name="android.intent.category.LAUNCHER"/>
				</intent-filter>
			</activity>
			<activity
				android:name=".SignupPageActivity" android:configChanges="orientation|screenSize"
				android:screenOrientation="portrait" />
			<activity
				android:name=".LoggedinPageActivity" android:configChanges="orientation|screenSize"
				android:screenOrientation="portrait" />
    </application>

</manifest>
